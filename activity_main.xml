<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    >


    <TextView
        android:id="@+id/Menu"
        android:layout_width="400dp"
        android:layout_height="220dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Menu"
        android:textAppearance="?attr/chipStyle"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/BennysDiner"
        android:layout_width="400dp"
        android:layout_height="92dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Benny's Highway Diner"
        android:textAppearance="?attr/chipStyle"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="8dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_layout1"
        >

        <ImageView
            android:id="@+id/imageHamburger"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textHamburger"
            android:padding="16dp"
            app:srcCompat="@drawable/newest_hamburger"
            app:layout_constraintVertical_chainStyle="spread"/>

        <EditText
            android:id="@+id/textHamburger"
            android:layout_width="206dp"
            android:layout_height="76dp"
            android:layout_marginStart="8dp"
            android:nestedScrollingEnabled="false"
            android:text="Crispy Burger: 220g patty, lettuce, tomatoes, onions and pickles"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/imageHamburger"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/priceHamburger"
            android:padding="16dp" />

    <TextView
        android:id="@+id/priceHamburger"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginStart="50dp"
        android:text="$9.99"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/textHamburger"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cokeImage"
        android:padding="16dp" />

        <ImageView
            android:id="@+id/cokeImage"
            android:layout_width="229dp"
            android:layout_height="158dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.663"
            app:srcCompat="@mipmap/coke" />

        <TextView
            android:id="@+id/cokeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coca Cola"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.764" />

        <TextView
            android:id="@+id/cokePrice"
            android:layout_width="103dp"
            android:layout_height="46dp"
            android:text="$1.99"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.211"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.824"
            tools:text="$1.99" />

        <ImageView
            android:id="@+id/chipsImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.726"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.274"
            app:srcCompat="@mipmap/new_fries" />

    <TextView
        android:id="@+id/textChips"
        android:layout_width="177dp"
        android:layout_height="34dp"
        android:text="Crispy french fries"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

        <TextView
            android:id="@+id/PriceChips"
            android:layout_width="105dp"
            android:layout_height="51dp"
            android:layout_marginEnd="80dp"
            android:text="$3.99"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.451" />


    <ImageView
        android:id="@+id/spriteImage"
        android:layout_width="136dp"
        android:layout_height="156dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        app:srcCompat="@mipmap/sprite" />

    <TextView
        android:id="@+id/spriteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sprite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/spritePrice"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:text="$1.99"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        tools:text="$1.99" />


    <TextView
        android:id="@+id/Reservations"
        android:layout_width="400dp"
        android:layout_height="1050dp"
        android:layout_margin="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Reservations"
        android:textAppearance="?attr/chipStyle"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="688dp"
        android:text="Number of guests:"
        android:textColor="#CDDC39"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="322dp"
        android:layout_marginBottom="84dp"
        android:height="50dp"
        android:hint="Enter number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="638dp"
        android:text="Type of payment:"
        android:textColor="#CDDC39"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:text="Date:"
        android:textColor="#CDDC39"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-7dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="48dp"
        android:text="Reserve Seats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" /><![CDATA[






    />

]]>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
